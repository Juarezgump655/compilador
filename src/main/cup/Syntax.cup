           {:
           String valor = "";
           valor = variable.obtenerValorVaiable(id, variables);
           Boolean resultado =  condicion.evaluar(c,valor, val);
           RESULT = resultado;
           :}
          | valor:v comparar:c condicionP:val{:
             Boolean resultado =  condicion.evaluar(c, v, val);
             RESULT = resultado;
          :};

