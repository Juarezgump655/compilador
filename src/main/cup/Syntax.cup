concatenar ::= TEXTO:t SUMA concatenarp:c {: RESULT = t.substring(1, t.length() - 1) + c; :}
             | ID:id SUMA concatenarp:c
             {:
                RESULT =  variable.obtenerValorVaiable(id, variables) + c;


             ;:};

